[tool.poetry]
name = "{{ project_name }}"
version = "0.1.0"
description = "A Framework for LLM Applications. Inspired by Django, Laravel, and Meltano."
authors = []
readme = "README.md"

[tool.poetry.dependencies]
python = "^3.10"
jinja2 = "^3.1.2"
loguru = "^0.7.0"
opentelemetry-api = "^1.19.0"
opentelemetry-distro = "^0.40b0"
opentelemetry-exporter-otlp = "^1.19.0"
opentelemetry-instrumentation-fastapi = "^0.40b0"
opentelemetry-sdk = "^1.19.0"
python-slugify = "^8.0.1"
typer = { extras = ["all"], version = "^0.9.0" }

[tool.poetry.group.marvin.dependencies]
marvin = "^1.3.0"

[tool.poetry.group.llama.dependencies]
llama-index = "^0.8.12"

[tool.poetry.group.dev.dependencies]
pytest = "^7.4.0"
bandit = { extras = ["toml"], version = "^1.7.5" }
black = "^23.7.0"
docformatter = "^1.7.5"
hypothesis = "^6.82.6"
loguru = "^0.7.0"
opentelemetry-distro = "^0.40b0"
opentelemetry-exporter-otlp = "^1.19.0"
pdoc = "^14.0.0"
pydocstyle = { extras = ["toml"], version = "^6.3.0" }

[tool.poetry.group.dagster.dependencies]
dagster = "^1.4.7"
dagster-webserver = "^1.4.7"

[tool.dagster]
module_name = "app.pipeline"

[tool.poetry.group.fastapi.dependencies]
fastapi = "^0.101.1"
uvicorn = { extras = ["standard"], version = "^0.23.2" }

[build-system]
requires = ["poetry-core"]
build-backend = "poetry.core.masonry.api"
